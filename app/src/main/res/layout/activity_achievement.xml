<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_game_bg"
    tools:context=".Achievement">

    <TextView
        android:id="@+id/btn_achievement_title"
        android:layout_width="326dp"
        android:layout_height="136dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="79dp"
        android:text="Achievement"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/first_time_dead"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/first_time_dead"
        android:layout_width="320dp"
        android:layout_height="274dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_achievement_title" />
</android.support.constraint.ConstraintLayout>